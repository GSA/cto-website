---
layout: null
permalink: /pages.json
---

{% assign pages = site.html_pages | concat: site.documents %}

{% capture newline %}
{% endcapture %}

{
  "entries": [
    {% for page in pages %}
      {
        "title": "{{ page.title }}",
        "collection": "{{ page.collection }}",
        "category": "{{ page.category }}",
        "url": "{{ page.url }}",
        "excerpt": "{{ page.excerpt | strip_html | escape_once | replace: newline, ' ' }}",
        "fulltext": "{{ page.content | markdownify | strip_html | escape_once | replace: newline, ' ' }}"
      }{% if forloop.last %}{% else %},{% endif %}
    {% endfor %}
  ]
}
